<script>
  var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ? true : false;
  var length = 250;
  if(isMobile) {
        length = 150;
  }

  $('.social-feed-container').socialfeed({
  <?php if($this->fbStatus): ?>
    // FACEBOOK
    facebook:{
      accounts: <?= $this->fbAccounts ?>,  //Array: Specify a list of accounts from which to pull wall posts
      limit: <?= $this->fbLimit ?>, //Integer: max number of posts to load
      access_token: '<?= $this->fbToken ?>'  //String: "APP_ID|APP_SECRET"
    },
  <?php endif; ?>
  <?php if($this->gpStatus): ?>
    // GOOGLEPLUS
    google:{
      accounts: <?= $this->gpAccounts ?>, //Array: Specify a list of accounts from which to pull posts
      limit: <?= $this->gpLimit ?>, //Integer: max number of posts to load
      access_token: '<?= $this->gpToken ?>' //String: G+ access token
    },
  <?php endif; ?>

    // GENERAL SETTINGS
    length:<?= $this->textLength ?>,
    media_min_width: <?= $this->mediaMinWidth ?>,
    template: '<?= $this->itemTemplate ?>',
    show_media: <?= $this->showMedia ?>,
    update_period: <?= $this->updatePeriod ?>,
    date_format: '<?= $this->dateFormat ?>',
    date_locale: '<?= $this->dateLocale ?>',
  });
</script>

<?php if($this->debug): ?>
<div>
  <h2>DEBUG:</h2>
